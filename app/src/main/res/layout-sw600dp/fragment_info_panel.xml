<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="fill_parent"
tools:context="com.mobileaviationtools.flightsimplannerpro.Info.InfoPanelFragment"
xmlns:ads="http://schemas.android.com/apk/res-auto"
android:baselineAligned="false">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_below="@+id/scaleBarView"
        android:layout_marginLeft="1dp"
        android:id="@+id/linearLayout4"
        android:background="#3cffffff"
        android:layout_height="86dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:clickable="false"
            android:background="@drawable/infopanelborder"
            android:layout_marginLeft="3dp"
            android:layout_width="140dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: sw600dp"
                android:id="@+id/textView"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="9sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/latitudeTxt"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="0.01"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/longitudeTxt"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="0.01"
                    android:layout_marginLeft="2dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:textSize="26sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:background="@drawable/infopanelborder"
            android:id="@+id/linearLayout"
            android:layout_marginLeft="3dp"
            android:layout_width="120dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GS:"
                android:id="@+id/textView18"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="9sp"
                android:textStyle="bold"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:shadowColor="#000000" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/groundspeedTxt"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="0"
                    android:layout_marginTop="5dp"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="36sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:background="@drawable/infopanelborder"
            android:id="@+id/linearLayout2"
            android:layout_marginLeft="3dp"
            android:layout_width="120dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HDG:"
                android:id="@+id/textView19"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:focusableInTouchMode="false"
                android:textSize="9sp"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:shadowColor="#000000" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/headingTxt"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="0.01"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="36sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:background="@drawable/infopanelborder"
            android:id="@+id/linearLayout9"
            android:layout_marginLeft="3dp"
            android:layout_width="108dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altitude:"
                android:id="@+id/textView27"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:focusableInTouchMode="false"
                android:textSize="9sp"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/infoAltitudeTxt"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="0.01"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:textSize="36sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:background="@drawable/infopanelborder"
            android:id="@+id/linearLayout3"
            android:clickable="false"
            android:layout_marginLeft="3dp"
            android:layout_width="220dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track:"
                android:id="@+id/textView20"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:focusableInTouchMode="true"
                android:textSize="9sp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To: ..."
                android:id="@+id/toWaypointTxt"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:shadowColor="#ff000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="0.01"
                android:layout_weight="1"
                android:textColorHighlight="#ffffffff"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:layout_marginLeft="1dp"
                android:textSize="26sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom">

                <TextView
                    android:layout_height="wrap_content"
                    android:text="Dis: ...NM"
                    android:id="@+id/distanceToTxt"
                    android:singleLine="true"
                    android:textIsSelectable="false"
                    android:textColor="#ffffff"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="0.01"
                    android:password="false"
                    android:textStyle="bold"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="26sp"
                    android:layout_width="130dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:text="Hdg: ..."
                    android:id="@+id/hdgToTxt"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="0.01"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="26sp"
                    android:layout_width="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
