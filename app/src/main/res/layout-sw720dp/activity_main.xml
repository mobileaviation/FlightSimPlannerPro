<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mobileaviationtools.flightsimplannerpro.MainActivity"
    android:background="#ffffff"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:id="@+id/baseLayout">


    <!--<us.ba3.me.MapView-->
        <!--android:id="@+id/mapView1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="visible" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/InfoLayout"
            android:background="#64aaaaaa"
            android:gravity="center_vertical|right"
            android:visibility="visible"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false"
                android:layout_weight="80"
                android:background="#004b4b4b"
                android:id="@+id/infoPanelLayout">

                <fragment
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/infoPanelFragment"
                    android:name="com.mobileaviationtools.flightsimplannerpro.Info.InfoPanelFragment"
                    tools:layout="@layout/fragment_info_panel" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/buttonsLayout">

                <Button
                    android:id="@+id/activateRouteBtn"
                    android:background="@drawable/flightplanactivate"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <Button
                    android:id="@+id/addNewRouteBtn"
                    android:background="@drawable/flightplanbutton"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <Button
                    android:id="@+id/connectBtn"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/disconnected"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
