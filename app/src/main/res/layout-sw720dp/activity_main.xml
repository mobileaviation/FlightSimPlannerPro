    <!--</android.support.design.widget.NavigationView>-->

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill_vertical|fill_horizontal"
        android:background="@color/cast_intro_overlay_button_background_color">
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:weightSum="1"-->

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoLayout"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:layout_weight="80"
                    android:id="@+id/infoPanelLayout"
                    android:layout_gravity="top">

                    <fragment
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/infoPanelFragment"
                        android:name="com.mobileaviationtools.flightsimplannerpro.Info.InfoPanelFragment"
                        tools:layout="@layout/fragment_info_panel" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonsLayout"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <Button
                        android:id="@+id/activateRouteBtn"
                        android:background="@drawable/flightplanactivate"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_width="75dp"
                        android:layout_height="75dp" />

                    <Button
                        android:id="@+id/addNewRouteBtn"
                        android:background="@drawable/flightplanbutton"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_width="75dp"
                        android:layout_height="75dp" />

                    <Button
                        android:id="@+id/connectBtn"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/disconnected"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_width="75dp"
                        android:layout_height="75dp" />
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapLayout"
            android:orientation="horizontal">
        </LinearLayout>
    </RelativeLayout>

    <!--</RelativeLayout>-->

</android.support.v4.widget.DrawerLayout>
